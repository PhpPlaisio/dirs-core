{
  "name": "plaisio/dirs-core",
  "description": "PhpPlaisio: Core Directories",
  "keywords": [
    "PhpPlaisio",
    "Core",
    "Directories"
  ],
  "license": "MIT",
  "require": {
    "php": ">=8.1",
    "plaisio/dirs": "^1.1",
    "setbased/exception": "^2.1.1"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "require-dev": {
    "phing/phing": "^3.0.0-RC4",
    "phpunit/phpunit": "^9.6.2"
  },
  "autoload": {
    "psr-4": {
      "Plaisio\\Dirs\\": "src/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Plaisio\\Dirs\\Test\\": "test/"
    }
  },
  "config": {
    "bin-dir": "bin/",
    "sort-packages": true,
    "allow-plugins": {
      "phing/phing-composer-configurator": true
    }
  }
}
